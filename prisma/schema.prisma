// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

/// Define the Seasons model
model Seasons {
  SeasonID    Int     @id @default(autoincrement())
  SeasonName  String  @unique

  // Define the relation to SeasonalProduce
  SeasonalProduces SeasonalProduce[]
}

// Define the Fruits model
model Fruits {
  FruitID     Int     @id @default(autoincrement())
  FruitName   String  @unique

  // Define the relation to SeasonalProduce
  SeasonalProduces SeasonalProduce[]
}

// Define the Vegetables model
model Vegetables {
  VegetableID Int     @id @default(autoincrement())
  VegetableName String @unique

  // Define the relation to SeasonalProduce
  SeasonalProduces SeasonalProduce[]
}

// Define the SeasonalProduce model
model SeasonalProduce {
  SeasonalProduceID Int       @id @default(autoincrement())
  SeasonID          Int
  FruitID           Int
  VegetableID       Int

  // Define the relations to other models
  Season            Seasons   @relation(fields: [SeasonID], references: [SeasonID])
  Fruit             Fruits    @relation(fields: [FruitID], references: [FruitID])
  Vegetable         Vegetables @relation(fields: [VegetableID], references: [VegetableID])

  // Define foreign key constraints
  @@index([SeasonID], name: "idx_season_id")
  @@index([FruitID], name: "idx_fruit_id")
  @@index([VegetableID], name: "idx_vegetable_id")
}


